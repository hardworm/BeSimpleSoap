{
    "name": "hardworm/soap",
    "type": "library",
    "description": "A fixed version of bohrlot/BeSimpleSoap used to build SOAP and WSDL based web services. This fork work php 7 and php 8",
    "keywords": ["soap", "soap server", "soap client"],
    "license": "MIT",
    "authors": [
        {
            "name": "Francis Besset",
            "email": "francis.besset@gmail.com"
        },
        {
            "name": "Christian Kerl",
            "email": "christian-kerl@web.de"
        },
        {
            "name": "Andreas Schamberger",
            "email": "mail@andreass.net"
        },
        {
            "name": "Petr BechynÄ›",
            "email": "mail@petrbechyne.com"
        },
        {
            "name": "Francesco Santoro",
            "email": "santoro@itacatech.it"
        },
        {
          "name": "Aleksandr Zelenkov",
          "email": "hardworm@gmail.com",
          "role": "co-author"
        }
    ],
    "require": {
        "php": "^7.2||^8.0",
        "ext-soap": "*",
        "ext-curl": "*",
        "ass/xmlsecurity": "^1.0",
        "laminas/laminas-mime": "^2.7"
    },
    "replace": {
        "besimple/soap-bundle": "self.version",
        "besimple/soap-client": "self.version",
        "besimple/soap-common": "self.version",
        "besimple/soap-server": "self.version",
        "besimple/soap-wsdl":   "self.version"
    },
    "require-dev": {
        "mikey179/vfsstream": "~1.0",
        "phpunit/phpunit": "~8.0",
        "phpstan/phpstan": "^1.0",
        "phing/phing": "^2.16",
        "jakub-onderka/php-var-dump-check": "^0.2.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
  "minimum-stability": "stable",
  "autoload": {
        "psr-0": { "BeSimple\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    }
}
